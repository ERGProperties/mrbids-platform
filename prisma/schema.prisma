generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* =========================
   ENUMS
   ========================= */

enum Role {
  USER
  ADMIN
}

enum AuctionStatus {
  DRAFT
  LIVE
  CLOSED
}

enum ServiceFeeStatus {
  PENDING
  PAID
  FAILED
}

/* =========================
   MODELS
   ========================= */

model Auction {
  id            String   @id @default(cuid())

  // =========================
  // Core Listing Info
  // (optional during DRAFT)
  // =========================
  slug          String?  @unique
  title         String?
  addressLine   String?
  cityStateZip  String?

  imagesPath    String?
  images        Json?
  coverImage    String?   // ‚≠ê NEW (primary listing image)

  // =========================
  // Property Details (Step 3)
  // =========================
  propertyType  String?
  beds          Int?
  baths         Float?
  sqft          Int?
  condition     String?
  description   String?

  // =========================
  // Auction Settings
  // =========================
  startingBid   Int?
  bidIncrement  Int?
  reserveAmount Int?
  arv           Int?
  finalPrice    Int?

  startAt       DateTime?
  endAt         DateTime?

  status        AuctionStatus @default(DRAFT)
  result        String?       // UNDER_CONTRACT | SOLD | NO_SALE

  bidCount      Int      @default(0)
  durationDays  Int?

  bids          Bid[]

  // =========================
  // Platform Service Fee (1%)
  // =========================
  serviceFeeAmount   Int?
  serviceFeeStatus   ServiceFeeStatus?
  serviceFeePaidAt   DateTime?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Bid {
  id        String   @id @default(cuid())
  amount    Int
  createdAt DateTime @default(now())

  auctionId String
  auction   Auction  @relation(fields: [auctionId], references: [id])

  bidderId  String
  bidder    User     @relation(fields: [bidderId], references: [id])

  @@index([auctionId, createdAt])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  role      Role     @default(USER)
  createdAt DateTime @default(now())

  // =========================
  // Verified Bidder Model
  // =========================
  isVerifiedBidder Boolean @default(false)
  stripeCustomerId String?

  bids      Bid[]
  accounts  Account[]
  sessions  Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

