generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Auction {
  id            String   @id @default(cuid())
  slug          String   @unique
  title         String
  addressLine   String
  cityStateZip  String

  imagesPath    String
  images        Json     // array of image filenames

  startingBid   Int
  bidIncrement  Int
  arv           Int?
  finalPrice    Int?

  startAt       DateTime
  endAt         DateTime
  status        String   // LIVE | CLOSED
  result        String?  // UNDER_CONTRACT | SOLD | NO_SALE

  // Escrow / settlement
  escrowStatus  String?  // PENDING | RECEIVED | FAILED
  escrowAmount  Int?
  escrowDueBy   DateTime?

  bidCount      Int      @default(0)
  durationDays  Int?

  bids          Bid[]

  createdAt     DateTime @default(now())
}

model Bid {
  id        String   @id @default(cuid())
  amount    Int
  createdAt DateTime @default(now())

  auctionId String
  auction   Auction  @relation(fields: [auctionId], references: [id])

  bidderId  String
  bidder    User     @relation(fields: [bidderId], references: [id])

  @@index([auctionId, createdAt])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())

  bids      Bid[]
  accounts  Account[]
  sessions  Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

